ot_y_axes/><global_filter/></table></browse_table_settings></tab_browse><tab_sql><sql name="SQL 1*">-- Table des devinettes (pour manche 3)
CREATE TABLE IF NOT EXISTS riddles (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    riddle_text TEXT NOT NULL,
    correct_word TEXT NOT NULL,
    hint_level1 TEXT NOT NULL,
    hint_level2 TEXT NOT NULL,
    difficulty_level INTEGER DEFAULT 3
);

